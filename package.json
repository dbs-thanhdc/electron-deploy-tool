{
  "name": "deploy-tool",
  "version": "1.1.1",
  "description": "Git Deploy Tool with Electron GUI",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && npm run copy-static",
    "copy-static": "copyfiles -u 1 src/renderer/**/*.{html,css} dist",
    "watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --win --x64"
  },
  "keywords": [
    "electron",
    "deploy",
    "git"
  ],
  "author": {
    "name": "Thanhdc",
    "email": "thanh.dinh@deltabrains.vn",
    "url": "https://github.com/dbs-thanhdc"
  },
  "homepage": "https://github.com/dbs-thanhdc/electron-deploy-tool",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "copyfiles": "^2.4.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.thanh.deploy-tool",
    "productName": "Deploy Tool",
    "asar": true,
    "compression": "maximum",
    "publish": [
      {
        "provider": "github",
        "owner": "dbs-thanhdc",
        "repo": "electron-deploy-tool"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico",
      "publisherName": "ThanhDC",
      "legalTrademarks": "Deploy Tool Â© ThanhDC"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Deploy Tool",
      "uninstallDisplayName": "Deploy Tool"
    },
    "extraResources": [
      {
        "from": "extra/",
        "to": "extra/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "assets/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
